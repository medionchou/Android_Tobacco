<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/spinner"
        android:textStyle="bold"
        android:text="請選擇品牌"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/checkbox_group1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="請選擇生產線"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <CheckBox
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 1"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 2"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 3"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 4"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="請選擇生產線"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                android:textSize="30sp"/>

            <CheckBox
                android:id="@+id/line5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 5"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 6"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 7"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 8"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/line9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生產線 9"
                android:textSize="30sp" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="選擇濾嘴線"/>


            <RadioButton
                android:id="@+id/f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="濾嘴線 1"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/f2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="濾嘴線 2"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/f3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="濾嘴線 3"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/f4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="濾嘴線 4"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/f5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="濾嘴線 5"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手動"
                android:textSize="30sp" />
        </RadioGroup>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numberOf"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="請輸入生產箱數"
                android:inputType="numberDecimal"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/numberOfBoxes"
                android:text="每條線生產 0 箱"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total"
                android:text="共 0 箱"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="送出"/>

</RelativeLayout>
